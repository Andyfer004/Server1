generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserConversation {
  id         String        @id @default(cuid())
  phoneNumber String       @unique      // Usaremos el número de WhatsApp como identificador
  label       String?  
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  threadId   String?                     // (Opcional) para guardar el threadId de OpenAI si lo necesitas
  messages   UserMessage[]
  orders      Order[]
}

model UserMessage {
  id             String           @id @default(cuid())
  conversationId String
  role           String           // "user" o "assistant"
  content        String
  mediaUrl       String?          // Almacena la URL de la imagen si existe
  createdAt      DateTime         @default(now())
  conversation   UserConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}

model Order {
  id           String           @id @default(cuid())
  phoneNumber  String           // Relación con UserConversation
  createdAt    DateTime         @default(now())
  name         String
  lastName     String
  nit          String?
  product      String
  quantity     Int
  conversation UserConversation @relation(fields: [phoneNumber], references: [phoneNumber], onDelete: Cascade)
}