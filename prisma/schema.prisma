generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id               Int      @id @default(autoincrement())
  phoneNumber      String   @unique
  threadId         String
  tags             String[] @default([])
  lastProcessedAt  DateTime? // Campo opcional para rastrear el Ãºltimo procesamiento
  createdAt        DateTime @default(now())
}

