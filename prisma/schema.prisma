generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique
  threadId    String
  createdAt   DateTime @default(now())
  images      Image[]
}

model Image {
  id          Int      @id @default(autoincrement())
  url         String
  threadId    Int
  thread      Thread   @relation(fields: [threadId], references: [id])
  createdAt   DateTime @default(now())
}